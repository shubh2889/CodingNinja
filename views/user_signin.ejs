<link rel="stylesheet" href="<%= assetPath('css/user_signin.css') %>">
        


<form action="/users/create-session" method="POST" class="box">
    <h1>LOGIN</h1>
    <input type="email" name="email" placeholder="Email" required>
    <input type="password" name="password" placeholder="Password" required>
    <p>New to Codeial? <a href="/users/sign-up">Join now</a> </p>
    <button type="submit" value="Sign In">Log In</button>
    <div id="reset">
        <p class="google-signin">
            Login or Sign Up with
            <a href="/users/auth/google">
                <!-- <i class="fa fa-google"></i> --> Google
            </a>
        </p>
        <p class="forgot-password">
            <a href="/users/forgot-password">forgot password?</a>
        </p>
    </div>
    
</form>




