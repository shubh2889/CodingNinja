<header id="layout-header">
    <nav>
        <div class="mini-logo">
            <p>
                <a href='/'>
                    codeial
                </a>
            </p>
        </div>
    
        <div class="auth-links">
            <ul>
                <% if (locals.user){ %>
                <li>
                    <a href="/users/profile/<%= user.id %>">
                        <i class="fa fa-user" aria-hidden="true"></i>&nbsp
                        <%= user.name %>
                    </a>
                </li>
                <li>
                    <a href="/users/sign-out">
                        <i class="fa fa-sign-out" aria-hidden="true"></i> &nbsp Sign Out</a>
                </li>
                <% }else{ %>
                <li>
                    <a href="/users/sign-in">
                        <i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp Sign In</a>
                </li>
                <li>
                    <a href="/users/sign-up">
                        <i class="fa fa-user-plus" aria-hidden="true"></i>&nbsp Sign Up</a>
                </li>
        
                <% } %>
            </ul>
        </div>
    </nav>
 


</header>