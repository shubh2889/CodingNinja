<link rel="stylesheet" href="/css/posts.css">

<li id="post-<%= post._id %>">
    <div class="post-list">
        <p>
            <% if(locals.user && locals.user.id == post.user.id) {%>
                <small>
                    <a class="delete-post-button" href="/posts/destroy/<%= post.id %>">X</a>
                </small>
            <% } %>
                
            <%= post.content %>
            <br>
            <small>
                <%= post.user.name %>
            </small>
        </p>
